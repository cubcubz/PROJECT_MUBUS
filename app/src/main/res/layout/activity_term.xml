<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="egco.com.mubus.TermActivity"
    android:orientation="vertical"

    android:weightSum="1"
    android:background="#9ffff9f6">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="How To"
        android:background="#465eb8"
        android:id="@+id/textviewtop"
        android:textSize="35dp"
        android:textColor="#ffffff"
        android:padding="5dp"
        android:autoText="false"
        android:gravity="center" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="393dp"
        android:background="#2bfff7ef">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageView"

            android:src="@drawable/rrrsee2" />
    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="0dp">

        <Button
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:text="Route"
            android:id="@+id/routeButton"
            android:background="#465eb8"
            android:textColor="#ffffef"
            android:textSize="20dp"
            android:layout_marginBottom="0dp"
            android:onClick="gotoRoute"
            android:gravity="center" />

        <Button
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:text="Favorite"
            android:id="@+id/favButton"
            android:background="#465eb8"
            android:textColor="#ffffef"
            android:textSize="20dp"
            android:layout_marginBottom="0dp"
            android:onClick="gotoFav"
            android:gravity="center" />

        <Button
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:text="Setting"
            android:id="@+id/settingButton"
            android:background="#465eb8"
            android:textColor="#ffffef"
            android:textSize="20dp"
            android:layout_marginBottom="0dp"
            android:gravity="center" />
    </LinearLayout>


</LinearLayout>
